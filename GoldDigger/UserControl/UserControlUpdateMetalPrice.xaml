            Margin="5,5,5,5"
            VerticalAlignment="Center" />

        <TextBox x:Name="TextBoxPlatDkkPrice"
                 TextWrapping="Wrap"
                 Text="Binding Here"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Grid.Column="1"
                 Grid.Row="0"
                 Margin="5,5,5,5" />

        <TextBox x:Name="TextBoxGoldDkkPrice"
                 TextWrapping="Wrap"
                 Text="Binding Here"
