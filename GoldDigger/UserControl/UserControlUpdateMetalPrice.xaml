            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <Label Content="Platinum"
               Grid.Row="0"
               Grid.Column="0"
               HorizontalAlignment="Center"
               Margin="5,5,5,5"
               VerticalAlignment="Center" />
        
        <Label Content="Gold"
               Grid.Row="1"
               Grid.Column="0"
               HorizontalAlignment="Center"
               Margin="5,5,5,5"
               VerticalAlignment="Center" />
        
        <Label Content="Rhodium"
               Grid.Row="2"
               Grid.Column="0"
               HorizontalAlignment="Center"
               Margin="5,5,5,5"
               VerticalAlignment="Center" />
        
        <Label
            Content="Palladium"
            Grid.Row="3"
            Grid.Column="0"
            HorizontalAlignment="Center"
            Margin="5,5,5,5"
            VerticalAlignment="Center" />

